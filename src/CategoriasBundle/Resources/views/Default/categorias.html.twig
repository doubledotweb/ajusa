{% extends 'base.html.twig' %}

{% block title %}Categorías{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{asset("/bundles/noticias/css/admin.css")}}">
{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="{{asset("/bundles/categorias/js/listado.js")}}"></script>
{% endblock %}

{% block section %}

<section class="menu-brother">

	
	<div class="container-table">
		<div class="contenedor-titulo row-between">	
			<h1>{{"Categorías"|trans}}</h1>
			<a class="btn waves-effect" href="{{path("anadir_categoria")}}">{{"Añadir nuevo"|trans}}</a>
		</div>
		<div class="contenedor-tabla">

			<table class="table-js striped">
				<thead>
					<tr>
						<th class="nombre">Nombre ES</th>
						<th class="nombre">Nombre EN</th>
						<th class="total">Total artículos</th>						
						<th class="opciones">{{"Opciones"|trans}}</th>
					</tr>
				</thead>
				
				<tbody>

					{% for categoria in categorias %}

					<tr class="categoria">
						<td class="nombre">{{categoria.nombre.es}}</td>
						<td class="nombre">{{categoria.nombre.en}}</td>
						<td class="total">{{categoria.noticias.getValues()|length}}</td>
						<td class="opcion">
							<a class="ver" href="{{path("editar_categoria",{"id":categoria.id})}}"><span><i class="material-icons" title="Editar">edit</i></span></a>

							<a class="borrar" href="{{path("eliminar_categoria",{"id":categoria.id})}}"><span><i class="material-icons" title="Borrar">delete</i></span></a>
							
						</td>
					</tr>

					{% endfor %}

				</tbody>
			</table>

		</div>




	</div>

</section>

{% endblock %}


{% block popup %}

	<div id="popup" class="modal">
		<div class="modal-content">
			<div id="box">
				<div id="message"></div>
				<div id="box_options"></div>
			</div>
		</div>
	</div>
{% endblock %}