{% extends 'base.html.twig' %}

{% block title %}Comentarios{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{asset("/bundles/comentarios/js/listado.js")}}"></script>
{% endblock %}

{% block section %}

<section class="menu-brother">

	
	<div class="container-table">
		<div class="contenedor-titulo row-between">	
			<h1>Comentarios</h1>			
		</div>
		<div class="contenedor-tabla">

			<table class="table-js striped">
				<thead>
					<tr>
						<th class="fecha">Alta</th>
						<th class="nombre">Autor</th>
						<th class="nombre">Permitido</th>
						<th class="opciones">Opciones</th>
					</tr>
				</thead>

				<tbody>

					{% for comentario in comentarios %}

					<tr class="comentario" id="{{comentario.id}}">
						<td class="fecha">{{comentario.getCreado()|date("d/m/Y H:i:s")}}</td>
						<td class="nombre">{{comentario.nombre}}</td>
						<td class="estado"><i class="material-icons" title="{{comentario.permitido?"Activado":"Bloqueado"}}">{{comentario.permitido?"done":"cancel"}}</i></td>
						<td class="opcion">
							<a class="js-estado" href="{{path("validar_comentario")}}"><i class="material-icons estado" title="{{comentario.permitido?"Bloquear":"Activar"}}">{{comentario.permitido?"cancel":"done"}}</i></a>
							<a class="ver" href="{{path("ver_comentario",{"id":comentario.id})}}"><span><i class="material-icons" title="Ver">remove_red_eye</i></span></a>
							<a class="borrar" href="{{path("eliminar_comentario")}}"><span><i class="material-icons" title="Borrar">delete</i></span></a>
						</td>
					</tr>

					{% endfor %}

				</tbody>
			</table>

		</div>




	</div>

</section>

{% endblock %}


{% block popup %}

	<div id="popup" class="modal">
		<div class="modal-content">
			<div id="box">
				<div id="message"></div>
				<div id="box_options"></div>
			</div>
		</div>
	</div>
{% endblock %}